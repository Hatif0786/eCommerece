doctype html
html
	head
		meta(charset='utf-8')
		title Login and Sign Up
		link(rel='stylesheet', href='./css/login.css')
	body
		center
			.main
				.mainHeader
					a#login login
					a#register signup
				.mainBody
					#loginDiv.loginBody
						form.loginForm(action='/LoginSeller', method='post')
							input(type='text', name='EmailLogin', placeholder='E-Mail', required='')
							input(type='password', name='PasswordLogin', placeholder='Password', required='')
							br
							button(name='button') Login
					#registrationDiv.registerBody
						form.registerForm(action='/SellerLogin', method='post')
							input(type='text', name='NameRegister', placeholder='Name', required='')
							input(type='text', name='EmailRegister', placeholder='E-Mail', required='')
							input(type='text', name='MobileNumber', placeholder='7894561230', required='')
							input(type='password', name='PasswordRegister', placeholder='Password', required='')
							br
							button(name='button') Register
				ul
					for val in errors
						if typeof(val) == 'object'
							li= val.msg
						else
							li= val
		script(src='./javascript/login.js')
